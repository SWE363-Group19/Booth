<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" type="text/css"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <!-- Popper.js and Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/homePage.css">
    <title>Login Form</title>
</head>


<body id="login_regester_body">
    <div class="container card w-75 mt-3 ">
        <div class="card-body ps-5 pe-5 shadow-5 text-center">
            <img class="caption-top w-25  ms-5 mb-4" src="images/booth-high-resolution-logo-transparent.png" alt="logo">
            <h2 class="fw-bold mb-5">Ad Submission Form</h2>
            <form id="adForm">
                <div class="mb-3">
                    <label for="adType" class="form-label">Ad Type</label>
                    <select class="form-select" id="adType" name="adType" required>
                        <option value="">Select type</option>
                        <option value="cafeteria">Cafeteria</option>
                        <option value="company">Company</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="mb-3">
                    <label for="number" class="form-label">Contact Number</label>
                    <input type="tel" class="form-control" id="number" name="number" required>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" id="location" name="location" required>
                </div>
                <div class="mb-3">
                    <label for="googleMapsLink" class="form-label">Google Maps Link (optional)</label>
                    <input type="url" class="form-control" id="googleMapsLink" name="googleMapsLink"
                        placeholder="https://www.google.com/maps/place/YourLocation">
                </div>
                <div class="mb-5">
                    <label for="description mb-4" class="form-label">Ad Description</label>
                    <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                </div>
                <div class="footer-col mb-5">
                    <div ng-app="fileUpload" class="container">
                        <div class="row" ng-controller="upload">
                            <div class="col">
                                <label for="description mb-4" class="form-label">Upload Images</label>
                                <input type="file" fileinput="file" filepreview="filepreview" />
                                <img ng-src="{{filepreview}}" class="img-responsive" ng-show="filepreview" />
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Submit button -->
                <button type="submit" class="btn btn-block mb-4"> Submit </button>

                <!-- Register buttons -->
                <div class="footer-col ">
                    <p>or sign up with:</p>
                    <div class="social-links">
                        <a href="#" target="_blank"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" target="_blank"><i class="fab fa-google"></i></a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>


</html>